<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".ReciveOTP">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Account Verify"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/enterotp_ic"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Mobile verification has \n Succefully done "
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:text="We are send the OTP on"
        />
    <TextView
        android:id="@+id/textmobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputcode"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Enter OTP"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:backgroundTint="#6A6868"
        android:layout_marginBottom="10dp"
        android:textColor="#6A6868"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:text="click here to"
            />
        <TextView
            android:id="@+id/textresendotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:text="  RESEND OTP"
            android:textStyle="bold"
            android:textColor="@color/blue"
            />
    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnverifiction"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="verify"
            android:textSize="18dp"
            android:layout_gravity="center"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </FrameLayout>




</LinearLayout>