<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".SendOTP">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Account Verification"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/sendotp_ic"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Enter your mobile number to \n verify account "
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="We will send you one time\n password(OTP)"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputmobile"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter mobile number"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:backgroundTint="#6A6868"
        android:layout_marginBottom="30dp"
        android:textColor="#6A6868"
        />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/getotpbtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textSize="18dp"
            android:layout_gravity="center"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>



</LinearLayout>